<h1>My Week</h1>

<table class="table table-bordered">
  <tr>
    <th>Day</th>
    <th>Fajer</th>
    <th>Zuhr</th>
    <th>Asr</th>
    <th>Maghrib</th>
    <th>Isha</th>
    <th>Quran</th>
    <th>Reading</th>
    <th>Sonan</th>
    <th>Seyam</th>
    <th>Qeyam</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @days.each do |day| %>
  <tr>
    <td><%= day.day %></td>
    <td><%= day.fajer %></td>
    <td><%= day.zuhr %></td>
    <td><%= day.asr %></td>
    <td><%= day.maghrib %></td>
    <td><%= day.isha %></td>
    <td><%= day.reading %></td>
    <td><%= day.sonan %></td>
    <td><%= day.seyam %></td>
    <td><%= day.qeyam %></td>
    <td><%= day.quranQuantity %></td>
    <td><%= link_to 'Show', [@user,day] %></td>
    <td><%= link_to 'Edit', edit_user_day_path(@user,day) %></td>
    <td><%= link_to 'Destroy', [@user,day], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>

</table>
<br />

<%= link_to 'New Day', new_user_day_path(@user) %>
